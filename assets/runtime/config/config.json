{
    "ServiceSettings": {
        "ListenAddress": ":{{MATTERMOST_PORT}}",
        "MaximumLoginAttempts": 10,
        "SegmentDeveloperKey": "",
        "GoogleDeveloperKey": "",
        "EnableOAuthServiceProvider": false,
        "EnableIncomingWebhooks": false,
        "EnableOutgoingWebhooks": false,
        "EnablePostUsernameOverride": false,
        "EnablePostIconOverride": false,
        "EnableTesting": false,
        "EnableSecurityFixAlert": true
    },
    "TeamSettings": {
        "SiteName": "{{MATTERMOST_NAME}}",
        "MaxUsersPerTeam": 50,
        "EnableTeamCreation": true,
        "EnableUserCreation": true,
        "RestrictCreationToDomains": "",
        "RestrictTeamNames": true,
        "EnableTeamListing": false
    },
    "SqlSettings": {
        "DriverName": "{{DB_ADAPTER}}",
        "DataSource": "{{DB_USER}}:{{DB_PASS}}@tcp({{DB_HOST}}:{{DB_PORT}})/{{DB_NAME}}",
        "DataSourceReplicas": [],
        "MaxIdleConns": 10,
        "MaxOpenConns": 10,
        "Trace": false,
        "AtRestEncryptKey": "{{MATTERMOST_SECRET_KEY}}"
    },
    "LogSettings": {
        "EnableConsole": false,
        "ConsoleLevel": "INFO",
        "EnableFile": true,
        "FileLevel": "INFO",
        "FileFormat": "",
        "FileLocation": "{{MATTERMOST_LOG_DIR}}/mattermost.log"
    },
    "FileSettings": {
        "DriverName": "local",
        "Directory": "{{MATTERMOST_DATA_DIR}}",
        "EnablePublicLink": true,
        "PublicLinkSalt": "{{MATTERMOST_LINK_SALT}}",
        "ThumbnailWidth": 120,
        "ThumbnailHeight": 100,
        "PreviewWidth": 1024,
        "PreviewHeight": 0,
        "ProfileWidth": 128,
        "ProfileHeight": 128,
        "InitialFont": "luximbi.ttf",
        "AmazonS3AccessKeyId": "",
        "AmazonS3SecretAccessKey": "",
        "AmazonS3Bucket": "",
        "AmazonS3Region": ""
    },
    "EmailSettings": {
        "EnableSignUpWithEmail": {{MATTERMOST_ENABLE_EMAIL_SIGNUP}},
        "SendEmailNotifications": true,
        "RequireEmailVerification": true,
        "FeedbackName": "{{MATTERMOST_NAME}}",
        "FeedbackEmail": "{{MATTERMOST_EMAIL}}",
        "SMTPUsername": "{{SMTP_USER}}",
        "SMTPPassword": "{{SMTP_PASS}}",
        "SMTPServer": "{{SMTP_HOST}}",
        "SMTPPort": "{{SMTP_PORT}}",
        "ConnectionSecurity": "",
        "InviteSalt": "{{MATTERMOST_INVITE_SALT}}",
        "PasswordResetSalt": "{{MATTERMOST_RESET_SALT}}",
        "ApplePushServer": "",
        "ApplePushCertPublic": "",
        "ApplePushCertPrivate": ""
    },
    "RateLimitSettings": {
        "EnableRateLimiter": true,
        "PerSec": 10,
        "MemoryStoreSize": 10000,
        "VaryByRemoteAddr": true,
        "VaryByHeader": ""
    },
    "PrivacySettings": {
        "ShowEmailAddress": true,
        "ShowFullName": true
    },
    "GitLabSettings": {
        "Enable": true,
        "Secret": "{{GITLAB_SECRET}}",
        "Id": "{{GITLAB_ID}}",
        "Scope": "{{GITLAB_SCOPE}}",
        "AuthEndpoint": "{{GITLAB_AUTH_ENDPOINT}}",
        "TokenEndpoint": "{{GITLAB_TOKEN_ENDPOINT}}",
        "UserApiEndpoint": "{{GITLAB_API_ENDPOINT}}"
    }
}